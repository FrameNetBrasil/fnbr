<?xml version="1.0"?>
<view>
    <mformdialog id="formQualiaFormal" onClose="structure.reloadFrame();">
        <property title="{{_M('Formal Qualia')}}" />
        <options modal="true"/>
        <fields>
            <mhiddenfield id="qualia_idFrame" value = "$this->data->idFrame"/>
            <mlabel text="$this->data->frame" label="Frame:"/>
            <include component="MLookupFE.php" id="qualia_fe1" label="LU1"/>
            <include component="MLookupFE.php" id="qualia_fe2" label="LU2"/>
        </fields>
        <tools>
            <mlinkbutton id="lbCloseLemma" iconCls="icon-cancel" text="{{_M('Close')}}" plain="true" action="$this->data->close"/>
            <mlinkbutton id="lbSaveLemma" iconCls="icon-save" text="{{_M('Save')}}" plain="true" action="$this->data->save"/>
        </tools>
    </mformdialog>
</view>